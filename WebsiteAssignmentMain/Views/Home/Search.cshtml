

<section class="noflex">
    <form asp-action="Search" method="get">
        <div>
            <label for="SearchString">Search Movie by Title: </label> <input type="text" name="SearchString" id="SearchString" />
            <input type="submit" value="Filter" />
        </div>
    </form>
</section>

<div>
    @if (ViewData["SearchString"] != null && (string)ViewData["SearchString"] != String.Empty)
    {
        @foreach (var item in Model)
        {
            <h3>@item.Movie_Name</h3>
            <p><a asp-controller="Home" asp-action="MovieInfo" asp-route-id="@item.Movie_Id">Details</a></p>}
        if (Model.Count == 0)
        {
            <p>Sorry no matches.</p>
        }
    }
</div>
