@model Register
@{
    Layout = "_CMS";
}

<h2 class="center-text">Create New User Account</h2>
<form method="post">
    <div class="box">
        <div class="content">
            <div>
                <label asp-for="UserName">Username</label>
                <input class="field" input type="text" asp-for="UserName" placeholder="PLEASE ENTER YOUR USERNAME" />
            </div>
            <div>
                <label asp-for="Password">Password:</label>
                <input class="field" input type="password" asp-for="Password" placeholder="PLEASE ENTER YOUR PASSWORD" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input class="field" input type="password" asp-for="ConfirmPassword" placeholder="PLEASE ENTER YOUR PASSWORD" />
            </div>
            <div>
                <label asp-for="Email">Email Address:</label>
                <input class="field" input type="text" asp-for="Email" placeholder="PLEASE ENTER YOUR EMAIL" />
            </div>
            <div>
                <label asp-for="FullName">Full Name: </label>
                <input class="field" input type="text" asp-for="FullName" placeholder="PLEASE ENTER YOUR FULL NAME" />
            </div>
            <div>
                <label asp-for="BirthDate">Birth Date: </label>
                <div class="datestyle">
                    <input class="field" input type="date" asp-for="BirthDate" value="2001-01-01">
                </div>
            </div>
            <button type="submit" input class="btn">Create</button>
            <h3><button input class="btn" asp-controller="security" asp-action="SignIn">Go To Sign-In Page</button></h3>
        </div>
        </div>
</form>

